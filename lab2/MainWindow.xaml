<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="44*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="239*"/>
                <ColumnDefinition Width="287*"/>
                <ColumnDefinition Width="274*"/>
            </Grid.ColumnDefinitions>
            <TextBox TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="48" Grid.Row="1" Grid.ColumnSpan="3"/>
            <Label Grid.Column="1" Content="Label" Margin="0,10,0,0" VerticalAlignment="Top"/>
            <Button Grid.Column="1" Content="Button" Grid.Row="2" VerticalAlignment="Center" Height="36"/>
        </Grid>

    </Grid>
</Window>
